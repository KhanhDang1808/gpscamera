<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GPSCameraLocationOnPhoto" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="android:navigationBarColor">@color/black</item>
         <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.GPSCameraLocationOnPhoto" parent="Base.Theme.GPSCameraLocationOnPhoto" />

    <style name="Setting_Text1">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">@null</item>
<!--        <item name="android:background">?attr/selectableItemBackground</item>-->
<!--        <item name="android:paddingLeft">@dimen/_24dp</item>-->
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/sfuitext_regular</item>
    </style>

    <style name="sub_textview_location_detail" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/_a4a4a4</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/sfuitext_medium</item>
    </style>


    <style name="location_detail_edittext_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/sfuitext_medium</item>
    </style>

    <style name="map_type_textview_style" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:layout_gravity">clip_horizontal</item>
        <item name="android:layout_marginRight">@dimen/_32dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">@font/sfuitext_medium</item>
    </style>

</resources>