<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dt_main_lay"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_56dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_16dp"
    android:paddingRight="@dimen/_16dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_stam_top"
        app:tint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_temp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfuitext_medium"
            android:text="@string/stamp_to_bottom"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_selection"
        android:layout_width="@dimen/icon_size_28"
        android:layout_height="@dimen/icon_size_28"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/ic_done"
        app:tint="@color/color_main" />
</LinearLayout>
